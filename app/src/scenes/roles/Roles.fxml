                              <TableView fx:id="tblPermisosMod" layoutX="7.0" layoutY="70.0" prefHeight="181.0" prefWidth="582.0">
                                 <columns>
                                    <TableColumn prefWidth="75.0" text="ID" />
                                    <TableColumn prefWidth="494.0" text="Descripcion" />
                                 </columns>
                              </TableView>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                  <Tab text="Nuevo">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TextField fx:id="txtDescripcion" layoutX="14.0" layoutY="20.0" prefHeight="27.0" prefWidth="238.0" promptText="Descripcion o nombre del rol" />
                              <TableView fx:id="tblPermisos" layoutX="14.0" layoutY="55.0" prefHeight="200.0" prefWidth="570.0">
                                <columns>
                                  <TableColumn prefWidth="75.0" text="ID" />
                                  <TableColumn prefWidth="494.0" text="Descripcion" />
                                </columns>
                              </TableView>
                              <Button fx:id="btnGuardar" layoutX="270.0" layoutY="257.0" mnemonicParsing="false" text="Guardar" />
                              <Label layoutX="270.0" layoutY="25.0" prefHeight="17.0" prefWidth="279.0" text="Elegir permisos para el rol a continuacion:" />
                           </children>
                        </AnchorPane>
                    </content>
                  </Tab>
              </tabs>
            </TabPane>
            <Pane prefHeight="66.0" prefWidth="607.0">
               <children>
                  <Button fx:id="btnVolver" layoutX="22.0" layoutY="5.0" mnemonicParsing="false" onAction="#volver" text="Volver" />
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</AnchorPane>
