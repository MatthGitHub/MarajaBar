<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="scenes.roles.RolesController">
    <stylesheets>
        <URL value="@roles.css" />
    </stylesheets>
   <children>
      <VBox layoutY="-1.0" prefHeight="400.0" prefWidth="607.0">
         <children>
            <Pane prefHeight="68.0" prefWidth="607.0">
               <children>
                  <Label alignment="CENTER" layoutX="272.0" layoutY="9.0" text="Roles">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <TabPane prefHeight="348.0" prefWidth="607.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab fx:id="tblRoles" text="Roles">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="241.0" prefWidth="607.0">
                           <children>
                              <TableView fx:id="tblRoles" prefHeight="231.0" prefWidth="607.0">
                                <columns>
                                  <TableColumn prefWidth="606.0" text="Descripcion" />
                                </columns>
                              </TableView>
                              <Button fx:id="btnEliminar" layoutX="270.0" layoutY="243.0" mnemonicParsing="false" text="Eliminar" />
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                <Tab text="Modificar">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <Label fx:id="lblRol" alignment="CENTER" layoutX="134.0" layoutY="14.0" prefHeight="29.0" prefWidth="340.0">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                              <Label layoutX="14.0" layoutY="50.0" prefHeight="17.0" prefWidth="365.0" text="Agregar o quitar permisos para el rol a continuacion:" />
